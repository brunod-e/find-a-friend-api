// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum Role {
    ADMIN
    MEMBER
}

model Pet {
    id                 String   @id @default(uuid())
    name               String
    description        String?
    age                Int?
    size               String?
    energy_level       String?
    independence_level String?
    environment        String?
    photos             String[]
    requirements       String

    //   checkIns CheckIn[]

    @@map("pets")
}
